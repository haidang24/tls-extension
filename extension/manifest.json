{
  "manifest_version": 3,
  "name": "CTShield - Certificate Transparency Checker",
  "version": "2.0.0",
  "description": "Xác minh chứng chỉ TLS và phát hiện MITM bằng Certificate Transparency (CT) Logs và Merkle Proof Verification",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "debugger"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pkg/wasm_verifier_bg.wasm", "pkg/wasm_verifier.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "toggle-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Mở popup kiểm tra chứng chỉ"
    }
  }
}
